<Window x:Class="frmScoreCard.Form.Lineup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:frmScoreCard.Form"
        mc:Ignorable="d"
        Title="Lineup" 
        Loaded="Lineup_Loaded"       
        Height="720" Width="1280"
        MinHeight="600" MinWidth="1024"
        MaxHeight="1080" MaxWidth="1920"
        SizeToContent="Manual">

    <Window.Resources>
        <Style x:Key="MainGridStyle" TargetType="Grid">
            <Setter Property="Background" Value="Firebrick"/>
        </Style>
        
        <Style x:Key="TextStyle" TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Yellow"/>
            <Setter Property="Foreground" Value="DarkBlue"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid Style="{StaticResource MainGridStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Guest Team & Players -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <!-- Guest Team -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="7*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0">
                    <Label Content="Guest Team" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                           Style="{StaticResource TextStyle}"/>
                </Grid>

                <!-- ComboBox -->
                <Grid Grid.Row="1">
                    <ComboBox Name="cBoxGuestTeams" SelectionChanged="cBoxHomeTeams_SelectedIndexChanged" 
                              VerticalAlignment="Top" HorizontalAlignment="Center" Height ="25" Width="140" />
                </Grid>
            </Grid>

            <!-- Player -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0">
                    <Label Content="Player" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                           Style="{StaticResource TextStyle}"/>
                </Grid>

                <!-- ComboBox -->
                <Grid Grid.Row="1">
                    <ComboBox Name="cBoxGuestPlayers" SelectionChanged="cBoxHomePlayers_SelectedIndexChanged" 
                              HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="140" Height="25"/>
                </Grid>

                <!-- ListBox -->
                <Grid Grid.Row="2">
                    <ListBox Name="lBoxGuestPlayers" VerticalAlignment="Top" Margin="0,10,0,0" 
                             Width = "140" Height="170" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                </Grid>

                <!-- Remove & Clear Buttons -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- Remove -->
                    <Grid Grid.Column="0">
                        <Button Name="btnGuestTeamRemove" Click="btnHomePlayersRemove_Click" Content="Remove" 
                                Margin ="0,10" HorizontalAlignment="Center" VerticalAlignment="Top"
                                Height="35" Width="70" Style="{StaticResource ButtonStyle}"/>
                    </Grid>

                    <!-- Clear -->
                    <Grid Grid.Column="1">
                        <Button Name="btnGuestTeamClear" Click="btnHomePlayersClear_Click" Content="Clear" 
                                Margin ="0,10" HorizontalAlignment="Center" VerticalAlignment="Top"
                                Height="35" Width="70" Style="{StaticResource ButtonStyle}"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Guest Bullpen & Bench -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Bullpen -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0">
                    <Label Content="Guest Team Bullpen" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                           Style="{StaticResource TextStyle}"/>
                </Grid>

                <!-- ListBox -->
                <Grid Grid.Row="1">
                    <ListBox Name="lBoxGuestTeamBullpen" d:ItemsSource="{d:SampleData ItemCount=5}" 
                             VerticalAlignment="Top" Width = "140" Height="170" Margin="0,10,0,0"/>
                </Grid>
            </Grid>

            <!-- Bench -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0">
                    <Label Content="Guest Team Bench" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                           Style="{StaticResource TextStyle}"/>
                </Grid>

                <!-- ListBox -->
                <Grid Grid.Row="1">
                    <ListBox Name="lBoxGuestTeamBench" d:ItemsSource="{d:SampleData ItemCount=5}" 
                            VerticalAlignment="Top" Width = "140" Height="170" Margin="0,10,0,0"/>
                </Grid>

            </Grid>
        </Grid>
        
        <!-- Middle Section -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <!-- Img -->
            <Grid Grid.Row="0">
                
                <Image HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="150"
                       Source="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a6/Major_League_Baseball_logo.svg/1200px-Major_League_Baseball_logo.svg.png"/>

            </Grid>
            
            <!-- Label -->
            <Grid Grid.Row="1">
                <Label Name="lblDate" Content="Date" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                       Style="{StaticResource TextStyle}"/>
            </Grid>
            
            <!-- Label -->
            <Grid Grid.Row="2">
                <Label Content="Umpires" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                       Style="{StaticResource TextStyle}"/>
            </Grid>

            <!-- ListBox -->
            <Grid Grid.Row="3">
                <ListBox Name="lBoxUmpires" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,10,0,0"
                         Width="140" Height="170"/>
            </Grid>

            <!-- Button -->
            <Grid Grid.Row="4">
                <Button Name="btnScoreCard" Click="btnScorecard_Click" Content="Home Scorecard" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="100"
                        Style="{StaticResource ButtonStyle}"/>
            </Grid>

            <!-- Button -->
            <Grid Grid.Row="5">
                <Button Name="btnScoreCardGuest" Click="btnScorecardGuest_Click" Content="Guest Scorecard" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="100"
                        Style="{StaticResource ButtonStyle}"/>
            </Grid>
        </Grid>

        <!-- Home Bullpen & Bench -->
        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Bullpen -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0">
                    <Label Content="Home Team Bullpen" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                           Style="{StaticResource TextStyle}"/>
                </Grid>

                <!-- ListBox -->
                <Grid Grid.Row="1">
                    <ListBox Name="lBoxHomeTeamBullpen" d:ItemsSource="{d:SampleData ItemCount=5}" 
                             VerticalAlignment="Top" Width = "140" Height="170" Margin="0,10,0,0"/>
                </Grid>
            </Grid>

            <!-- Bench -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0">
                    <Label Content="Home Team Bench" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                           Style="{StaticResource TextStyle}"/>
                </Grid>

                <!-- ListBox -->
                <Grid Grid.Row="1">
                    <ListBox Name="lBoxHomeTeamBench" d:ItemsSource="{d:SampleData ItemCount=5}" 
                             VerticalAlignment="Top" Width = "140" Height="170" Margin="0,10,0,0"/>
                </Grid>

            </Grid>
        </Grid>

        <!-- Home Team & Players-->
        <Grid Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <!-- Guest Team -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="7*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0">
                    <Label Content="Home Team" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                           Style="{StaticResource TextStyle}"/>
                </Grid>

                <!-- ComboBox -->
                <Grid Grid.Row="1">
                    <ComboBox Name="cBoxHomeTeams" SelectionChanged="cBoxHomeTeams_SelectedIndexChanged" 
                      VerticalAlignment="Top" HorizontalAlignment="Center" Height ="25" Width="140" />
                </Grid>
            </Grid>

            <!-- Player -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0">
                    <Label Content="Player" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                           Style="{StaticResource TextStyle}"/>
                </Grid>

                <!-- ComboBox -->
                <Grid Grid.Row="1">
                    <ComboBox Name="cBoxHomePlayers" SelectionChanged="cBoxHomePlayers_SelectedIndexChanged" 
                      HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="140" Height="25"/>
                </Grid>

                <!-- ListBox -->
                <Grid Grid.Row="2">
                    <ListBox Name="lBoxHomePlayers" VerticalAlignment="Top" Margin="0,10,0,0" 
                     Width = "140" Height="170" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                </Grid>

                <!-- Remove & Clear Buttons -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- Remove -->
                    <Grid Grid.Column="0">
                        <Button Name="btnHomeTeamRemove" Click="btnHomePlayersRemove_Click" Content="Remove" 
                        Margin ="0,10" HorizontalAlignment="Center" VerticalAlignment="Top"
                        Height="35" Width="70" Style="{StaticResource ButtonStyle}"/>
                    </Grid>

                    <!-- Clear -->
                    <Grid Grid.Column="1">
                        <Button Name="btnHomeTeamClear" Click="btnHomePlayersClear_Click" Content="Clear" 
                        Margin ="0,10" HorizontalAlignment="Center" VerticalAlignment="Top"
                        Height="35" Width="70" Style="{StaticResource ButtonStyle}"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Window>
