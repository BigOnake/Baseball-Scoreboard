<Window x:Class="frmScoreCard.Form.Lineup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:frmScoreCard.Form"
        mc:Ignorable="d"
        Title="Lineup" Height="450" Width="800"
        Loaded="Lineup_Loaded">

    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>

        <!-- HOME TEAM -->
        <Label Content="Home Team" HorizontalAlignment="Left" Margin="40,10,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="cBoxHomeTeams" SelectionChanged="cBoxHomeTeams_SelectedIndexChanged" HorizontalAlignment="Left" Margin="7,41,0,0" VerticalAlignment="Top" Width="140"/>
        <Label Content="Player" HorizontalAlignment="Left" Margin="56,117,0,0" VerticalAlignment="Top" Height="32"/>
        <ComboBox Name="cBoxHomePlayers" SelectionChanged="cBoxHomePlayers_SelectedIndexChanged" HorizontalAlignment="Left" Margin="7,149,0,0" VerticalAlignment="Top" Width="140" Height="26"/>
        <ListBox Name="lBoxHomePlayers" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="7,181,571,35"/>
        <Button Name="btnHomeTeamRemove" Click="btnHomePlayersRemove_Click" Content="Remove" HorizontalAlignment="Left" Margin="10,404,0,0" VerticalAlignment="Top"/>
        <Button Name="btnHomeTeamClear" Click="btnHomePlayersClear_Click" Content="Clear" HorizontalAlignment="Left" Margin="116,404,0,0" VerticalAlignment="Top"/>
        <Label Content="Home Team Bullpen" HorizontalAlignment="Left" Margin="184,10,0,0" VerticalAlignment="Top"/>
        <ListBox Name="lBoxHomeTeamBullpen" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="172,40,406,219"/>
        <Label Content="Home Team Bench" HorizontalAlignment="Left" Margin="188,218,0,0" VerticalAlignment="Top"/>
        <ListBox Name="lBoxHomeTeamBench" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="172,249,406,10"/>

        <!-- GUEST TEAM -->
        <Label Content="Guest Team" HorizontalAlignment="Left" Margin="525,10,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="cBoxGuestTeams" SelectionChanged="cBoxGuestTeams_SelectedIndexChanged" HorizontalAlignment="Left" Margin="491,41,0,0" VerticalAlignment="Top" Width="140"/>
        <Label Content="Player" HorizontalAlignment="Left" Margin="540,117,0,0" VerticalAlignment="Top" Height="32"/>
        <ComboBox Name="cBoxGuestPlayers" SelectionChanged="cBoxGuestPlayers_SelectedIndexChanged" HorizontalAlignment="Left" Margin="491,149,0,0" VerticalAlignment="Top" Width="140" Height="26"/>
        <ListBox Name="lBoxGuestPlayers" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="491,181,87,35"/>
        <Button Name="btnGuestTeamRemove" Click="btnGuestPlayersRemove_Click" Content="Remove" Margin="491,404,181,16"/>
        <Button Name="btnGuestTeamClear" Click="btnGuestPlayersClear_Click" Content="Clear" HorizontalAlignment="Left" Margin="600,404,0,0" VerticalAlignment="Top"/>


        <Label Content="Guest Team Bullpen" HorizontalAlignment="Left" Margin="662,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <ListBox Name="lBoxGuestTeamBullpen" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,40,10,0" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="140" Height="181" VerticalAlignment="Top"/>
        <Label Content="Guest Team Bench" HorizontalAlignment="Left" Margin="666,218,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <ListBox Name="lBoxGuestTeamBench" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="649,249,11,10" Grid.ColumnSpan="2"/>

        <!-- MISC. -->
        <Label Name="lblDate" Content="Date" HorizontalAlignment="Left" Margin="383,99,0,0" VerticalAlignment="Top"/>
        <Label Content="Umpires" HorizontalAlignment="Left" Margin="373,172,0,0" VerticalAlignment="Top"/>
        <ListBox Name="lBoxUmpires" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="330,203,248,110"/>
        <Button Name="btnScoreCard" Click="btnScorecard_Click" Content="Home Scorecard" HorizontalAlignment="Left" Margin="354,385,0,0" VerticalAlignment="Top"/>
        <Button Name="btnScoreCardGuest" Click="btnScorecardGuest_Click" Content="Guest Scorecard" HorizontalAlignment="Left" Margin="356,340,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
