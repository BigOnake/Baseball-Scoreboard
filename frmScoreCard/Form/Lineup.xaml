<Window x:Class="frmScoreCard.Form.Lineup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:frmScoreCard.Form"
        mc:Ignorable="d"
        Title="Lineup" 
        Loaded="Lineup_Loaded"       
        Height="720" Width="1280"
        MinHeight="600" MinWidth="1024"
        MaxHeight="1080" MaxWidth="1920"
        SizeToContent="Manual">


    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Guest Team & Players -->
        <Grid Grid.Column="0" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <!-- Guest Team -->
            <Grid Grid.Row="0" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="7*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0" ShowGridLines="True">
                    <Label Content="Guest Team" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                </Grid>

                <!-- ComboBox -->
                <Grid Grid.Row="1" ShowGridLines="True">
                    <ComboBox Name="cBoxGuestTeams" SelectionChanged="cBoxHomeTeams_SelectedIndexChanged" 
                              VerticalAlignment="Top" HorizontalAlignment="Center" Height ="25" Width="140" />
                </Grid>
            </Grid>

            <!-- Player -->
            <Grid Grid.Row="1" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0" ShowGridLines="True">
                    <Label Content="Player" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                </Grid>

                <!-- ComboBox -->
                <Grid Grid.Row="1" ShowGridLines="True">
                    <ComboBox Name="cBoxGuestPlayers" SelectionChanged="cBoxHomePlayers_SelectedIndexChanged" 
                              HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="140" Height="25"/>
                </Grid>

                <!-- ListBox -->
                <Grid Grid.Row="2" ShowGridLines="True">
                    <ListBox Name="lBoxGuestPlayers" VerticalAlignment="Top" Margin="0,10,0,0" 
                             Width = "140" Height="170" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                </Grid>

                <!-- Remove & Clear Buttons -->
                <Grid Grid.Row="3" ShowGridLines="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- Remove -->
                    <Grid Grid.Column="0" ShowGridLines="True">
                        <Button Name="btnGuestTeamRemove" Click="btnHomePlayersRemove_Click" Content="Remove" 
                                Margin ="0,10" HorizontalAlignment="Center" VerticalAlignment="Top"
                                Height="25" Width="70"/>
                    </Grid>

                    <!-- Clear -->
                    <Grid Grid.Column="1" ShowGridLines="True">
                        <Button Name="btnGuestTeamClear" Click="btnHomePlayersClear_Click" Content="Clear" 
                                Margin ="0,10" HorizontalAlignment="Center" VerticalAlignment="Top"
                                Height="25" Width="70"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Guest Bullpen & Bench -->
        <Grid Grid.Column="1" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Bullpen -->
            <Grid Grid.Row="0" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0" ShowGridLines="True">
                    <Label Content="Guest Team Bullpen" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                </Grid>

                <!-- ListBox -->
                <Grid Grid.Row="1" ShowGridLines="True">
                    <ListBox Name="lBoxGuestTeamBullpen" d:ItemsSource="{d:SampleData ItemCount=5}" 
                             VerticalAlignment="Top" Width = "140" Height="170" Margin="0,10,0,0"/>
                </Grid>
            </Grid>

            <!-- Bench -->
            <Grid Grid.Row="1" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0" ShowGridLines="True">
                    <Label Content="Guest Team Bench" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                </Grid>

                <!-- ListBox -->
                <Grid Grid.Row="1" ShowGridLines="True">
                    <ListBox Name="lBoxGuestTeamBench" d:ItemsSource="{d:SampleData ItemCount=5}" 
                            VerticalAlignment="Top" Width = "140" Height="170" Margin="0,10,0,0"/>
                </Grid>

            </Grid>
        </Grid>
        
        <!-- Middle Section -->
        <Grid Grid.Column="2" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!-- Label -->
            <Grid Grid.Row="0">
                <Label Name="lblDate" Content="Date" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            </Grid>
            
            <!-- Label -->
            <Grid Grid.Row="1">
                <Label Content="Umpires" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            </Grid>

            <!-- ListBox -->
            <Grid Grid.Row="2">
                <ListBox Name="lBoxUmpires" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,10,0,0"
                         Width="140" Height="170"/>
            </Grid>

            <!-- Button -->
            <Grid Grid.Row="3">
                <Button Name="btnScoreCard" Click="btnScorecard_Click" Content="Home Scorecard" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="100"/>
            </Grid>

            <!-- Button -->
            <Grid Grid.Row="4">
                <Button Name="btnScoreCardGuest" Click="btnScorecardGuest_Click" Content="Guest Scorecard" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="100"/>
            </Grid>
        </Grid>

        <!-- Home Bullpen & Bench -->
        <Grid Grid.Column="3" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Bullpen -->
            <Grid Grid.Row="0" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0" ShowGridLines="True">
                    <Label Content="Home Team Bullpen" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                </Grid>

                <!-- ListBox -->
                <Grid Grid.Row="1" ShowGridLines="True">
                    <ListBox Name="lBoxHomeTeamBullpen" d:ItemsSource="{d:SampleData ItemCount=5}" 
                     VerticalAlignment="Top" Width = "140" Height="170" Margin="0,10,0,0"/>
                </Grid>
            </Grid>

            <!-- Bench -->
            <Grid Grid.Row="1" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0" ShowGridLines="True">
                    <Label Content="Home Team Bench" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                </Grid>

                <!-- ListBox -->
                <Grid Grid.Row="1" ShowGridLines="True">
                    <ListBox Name="lBoxHomeTeamBench" d:ItemsSource="{d:SampleData ItemCount=5}" 
                    VerticalAlignment="Top" Width = "140" Height="170" Margin="0,10,0,0"/>
                </Grid>

            </Grid>
        </Grid>

        <!-- Home Team & Players-->
        <Grid Grid.Column="4" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <!-- Guest Team -->
            <Grid Grid.Row="0" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="7*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0" ShowGridLines="True">
                    <Label Content="Home Team" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                </Grid>

                <!-- ComboBox -->
                <Grid Grid.Row="1" ShowGridLines="True">
                    <ComboBox Name="cBoxHomeTeams" SelectionChanged="cBoxHomeTeams_SelectedIndexChanged" 
                      VerticalAlignment="Top" HorizontalAlignment="Center" Height ="25" Width="140" />
                </Grid>
            </Grid>

            <!-- Player -->
            <Grid Grid.Row="1" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <!-- Label -->
                <Grid Grid.Row="0" ShowGridLines="True">
                    <Label Content="Player" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                </Grid>

                <!-- ComboBox -->
                <Grid Grid.Row="1" ShowGridLines="True">
                    <ComboBox Name="cBoxHomePlayers" SelectionChanged="cBoxHomePlayers_SelectedIndexChanged" 
                      HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="140" Height="25"/>
                </Grid>

                <!-- ListBox -->
                <Grid Grid.Row="2" ShowGridLines="True">
                    <ListBox Name="lBoxHomePlayers" VerticalAlignment="Top" Margin="0,10,0,0" 
                     Width = "140" Height="170" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                </Grid>

                <!-- Remove & Clear Buttons -->
                <Grid Grid.Row="3" ShowGridLines="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- Remove -->
                    <Grid Grid.Column="0" ShowGridLines="True">
                        <Button Name="btnHomeTeamRemove" Click="btnHomePlayersRemove_Click" Content="Remove" 
                        Margin ="0,10" HorizontalAlignment="Center" VerticalAlignment="Top"
                        Height="25" Width="70"/>
                    </Grid>

                    <!-- Clear -->
                    <Grid Grid.Column="1" ShowGridLines="True">
                        <Button Name="btnHomeTeamClear" Click="btnHomePlayersClear_Click" Content="Clear" 
                        Margin ="0,10" HorizontalAlignment="Center" VerticalAlignment="Top"
                        Height="25" Width="70"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Window>
