<Window x:Class="frmScoreCard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:frmScoreCard"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000"
        Loaded="MainWindow_Loaded">

    <Window.Resources>

        <Style x:Key="BaseGridStyle" TargetType="DataGrid">
            <Setter Property="FontSize" Value="8"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="RowHeight" Value="20"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserResizeColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="False"/>
            <Setter Property="AlternatingRowBackground" Value="#FFF5F5F5"/>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="2"/>
                        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="8"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="FontSize" Value="9"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="2"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key ="LHStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red"/>
        </Style>

    </Window.Resources>

    <Grid>

        <!-- Busch Stadium -->
        <DataGrid x:Name="DataGridBuschStadium"
          Style="{StaticResource BaseGridStyle}"
          HorizontalAlignment="Left" VerticalAlignment="Top"
          Width="245" Height="70" Margin="735,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date:" Binding="{Binding col1}" Width="70"/>
                <DataGridTextColumn Header=" " Binding="{Binding col2}" Width="30"/>
                <DataGridTextColumn Header=" " Binding="{Binding col3}" Width="30"/>
                <DataGridTextColumn Header=" " Binding="{Binding col4}" Width="30"/>
                <DataGridTextColumn Header=" " Binding="{Binding col5}" Width="30"/>
                <DataGridTextColumn Header=" " Binding="{Binding col6}" Width="30"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bench -->
        <DataGrid x:Name="DataGridBench" Style="{StaticResource BaseGridStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="246" Height="66" Margin="734,85,0,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Bench" Binding="{Binding col1}" Width="40"/>
                <DataGridTextColumn Header=" " Binding="{Binding col2}" Width="70"/>
                <DataGridTextColumn Header=" " Binding="{Binding col3}" Width="30"/>
                <DataGridTextColumn Header=" " Binding="{Binding col4}" Width="30"/>
                <DataGridTextColumn Header=" " Binding="{Binding col5}" Width="30"/>
                <DataGridTextColumn Header=" " Binding="{Binding col6}" Width="30"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- Pitchers Top -->
        <DataGrid x:Name="DataGridPitchersTop" Style="{StaticResource BaseGridStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="457" Height="141" Margin="273,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Pitcher" Binding="{Binding col1}" Width="80"/>
                <DataGridTextColumn Header="GS" Binding="{Binding col2}" Width="30"/>
                <DataGridTextColumn Header="W-L" Binding="{Binding col3}" Width="30"/>
                <DataGridTextColumn Header="ERA" Binding="{Binding col4}" Width="30"/>
                <DataGridTextColumn Header="IP" Binding="{Binding col5}" Width="30"/>
                <DataGridTextColumn Header="H" Binding="{Binding col6}" Width="30"/>
                <DataGridTextColumn Header="ER" Binding="{Binding col7}" Width="30"/>
                <DataGridTextColumn Header="BB" Binding="{Binding col8}" Width="30"/>
                <DataGridTextColumn Header="K" Binding="{Binding col9}" Width="30"/>
                <DataGridTextColumn Header="HR" Binding="{Binding col10}" Width="30"/>
                <DataGridTextColumn Header="AVG" Binding="{Binding col11}" Width="30"/>
                <DataGridTextColumn Header="WHIP" Binding="{Binding col12}" Width="30"/>
                <DataGridTextColumn Header="GB%" Binding="{Binding col13}" Width="30"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- Hitters & Umpires -->
        <DataGrid x:Name="DataGridHitters" Style="{StaticResource BaseGridStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="969" Height="392" Margin="11,156,0,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header=" " Binding="{Binding col1}" Width="80"/>
                <DataGridTextColumn Header=" " Binding="{Binding col2}" Width="30"/>
                <DataGridTextColumn Header="AVG" Binding="{Binding col3}" Width="80"/>
                <DataGridTextColumn Header="K" Binding="{Binding col4}" Width="80"/>
                <DataGridTextColumn Header="2B" Binding="{Binding col5}" Width="80"/>
                <DataGridTextColumn Header="HR" Binding="{Binding col6}" Width="80" Foreground="Red"/>
                <DataGridTextColumn Header="Runs" Binding="{Binding col7}" Width="80" Foreground="Blue"/>
                <DataGridTextColumn Header="SB-SBA" Binding="{Binding col8}" Width="80"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- Score -->
        <DataGrid x:Name="DataGridScore" Style="{StaticResource BaseGridStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="969" Height="46" Margin="11,553,0,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header=" " Binding="{Binding col1}" Width="150"/>
                <DataGridTextColumn Header="1" Binding="{Binding col2}" Width="50"/>
                <DataGridTextColumn Header="2" Binding="{Binding col3}" Width="50"/>
                <DataGridTextColumn Header="3" Binding="{Binding col4}" Width="50"/>
                <DataGridTextColumn Header="4" Binding="{Binding col5}" Width="50"/>
                <DataGridTextColumn Header="5" Binding="{Binding col6}" Width="50"/>
                <DataGridTextColumn Header="6" Binding="{Binding col7}" Width="50"/>
                <DataGridTextColumn Header="7" Binding="{Binding col8}" Width="50"/>
                <DataGridTextColumn Header="8" Binding="{Binding col9}" Width="50"/>
                <DataGridTextColumn Header="9" Binding="{Binding col10}" Width="50"/>
                <DataGridTextColumn Header="10" Binding="{Binding col11}" Width="50"/>
                <DataGridTextColumn Header="11" Binding="{Binding col12}" Width="50"/>
                <DataGridTextColumn Header="12" Binding="{Binding col13}" Width="50"/>
                <DataGridTextColumn Header="R" Binding="{Binding col14}" Width="50"/>
                <DataGridTextColumn Header="H" Binding="{Binding col15}" Width="50"/>
                <DataGridTextColumn Header="E" Binding="{Binding col16}" Width="50"/>
                <DataGridTextColumn Header="LOB" Binding="{Binding col17}" Width="50"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Managers -->
        <DataGrid x:Name="DataGridManagers" Style="{StaticResource BaseGridStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="247" Height="166" Margin="733,608,0,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Coaching Staff" Binding="{Binding col1}" Width="80"/>
                <DataGridTextColumn Header="Name" Binding="{Binding col2}" Width="80"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- Pitchers Bottom -->
        <DataGrid x:Name="DataGridPitchersBottom" Style="{StaticResource BaseGridStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="717" Height="166" Margin="11,608,0,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header=" " Binding="{Binding col1}" Width="80"/>
                <DataGridTextColumn Header="G" Binding="{Binding col2}" Width="50"/>
                <DataGridTextColumn Header="S/Holds" Binding="{Binding col3}" Width="50"/>
                <DataGridTextColumn Header="W-L" Binding="{Binding col4}" Width="50"/>
                <DataGridTextColumn Header="ERA" Binding="{Binding col5}" Width="50"/>
                <DataGridTextColumn Header="IP" Binding="{Binding col6}" Width="50"/>
                <DataGridTextColumn Header="K" Binding="{Binding col7}" Width="50"/>
                <DataGridTextColumn Header="BB" Binding="{Binding col8}" Width="50"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- Diamond -->
        <Rectangle HorizontalAlignment="Left" Height="141" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="258"/>
        <Rectangle HorizontalAlignment="Left" Height="33" Margin="131,100,0,0" Stroke="Black" VerticalAlignment="Top" Width="32" RenderTransformOrigin="1.09,0.028">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-45.92"/>
                    <TranslateTransform X="-26.969" Y="-14.569"/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>

    </Grid>
</Window>
